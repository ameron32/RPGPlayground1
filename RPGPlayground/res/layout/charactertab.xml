<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bSelectName"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10" >

            <!-- *** Left Side of Character Tab *** -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/bSelectHead"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Head"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/bSelectChest"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Chest"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/bSelectArms"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Arms"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/bSelectLegs"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Legs"
                            android:textSize="9dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/button3"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Abilities"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/button8"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Skills"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/button7"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Inventory"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/button4"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Button"
                            android:textSize="9dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/button9"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="MainHand"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/button10"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Back"
                            android:textSize="9dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/button11"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="OffHand"
                            android:textSize="9dp" />

                        <Button
                            android:id="@+id/button12"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="80dp"
                            android:layout_height="54dp"
                            android:text="Ammo"
                            android:textSize="9dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- *** Right Side of Character Tab *** -->
            <!-- ******************** VIEWFLIPPER BEGINS ************************ -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:orientation="vertical" >

                <ViewFlipper
                    android:id="@+id/viewFlipper1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/tvMeXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XP" />

                        <Button
                            android:id="@+id/bReset"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Reset"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:visibility="visible" android:imeOptions="actionGo">

                            <requestFocus />
                        </EditText>

                        <Button
                            android:id="@+id/bSetName"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SetName"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/bHNeck"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:text="Neck" />

                            <Button
                                android:id="@+id/bHSlot2"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:text="Slot2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvHeadTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="HEAD" />

                            <ImageButton
                                android:id="@+id/ibHeadImg"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_launcher" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvHeadName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/tvHeadArmorV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ArmorValue" />

                        <TextView
                            android:id="@+id/tvHeadAllBoosts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AllBoosts" />

                        <Button
                            android:id="@+id/bHeadEnh"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Enhance" />

                        <Button
                            android:id="@+id/bHeadIns"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Inscribe" />

                        <Button
                            android:id="@+id/bHeadEnc"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Enchant" />

                        <TextView
                            android:id="@+id/tvHeadGValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GoldValue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/bCCloak"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:text="Cloak" />

                            <Button
                                android:id="@+id/bCBelt"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:text="Belt" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tvChestTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="CHEST" />

                            <ImageButton
                                android:id="@+id/ibChestImg"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_launcher" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvChestName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/tvChestArmorV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ArmorValue" />

                        <TextView
                            android:id="@+id/tvChestAllBoosts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AllBoosts" />

                        <Button
                            android:id="@+id/bChestEnh"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Enhance" />

                        <Button
                            android:id="@+id/bChestIns"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Inscribe" />

                        <Button
                            android:id="@+id/bChestEnc"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Enchant" />

                        <TextView
                            android:id="@+id/tvChestGValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GoldValue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_launcher" />

                        <TextView
                            android:id="@+id/tvRightSidePlaceholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="(Placeholder3)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />

                            <Button
                                android:id="@+id/button13"
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Button" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_launcher" />

                        <TextView
                            android:id="@+id/tvRightSidePlaceholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="(Placeholder3)" />
                    </LinearLayout>
                </ViewFlipper>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>