<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="26dp" >

            <ProgressBar
                android:id="@+id/pbE1Health"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="24dp"
                android:progressDrawable="@drawable/healthprogress" />

            <TextView
                android:id="@+id/tvE1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Name"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvE1Health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="#1"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="26dp" >

            <ProgressBar
                android:id="@+id/pbE1Energy"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="175dp"
                android:layout_height="24dp"
                android:progressDrawable="@drawable/energyprogress" />

            <TextView
                android:id="@+id/tvE1Class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Class"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvE1Energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="#2"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />
        </FrameLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/bAttack"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/attack" />

</LinearLayout>